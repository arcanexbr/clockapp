<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:id="@+id/start"
    android:background="@drawable/background3"
    >


    <com.sdsmdg.harjot.longshadows.LongShadowsFrameLayoutWrapper
        android:id="@+id/longShadowsFrameLayoutWrapper"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        tools:layout_editor_absoluteX="0dp">

        <com.sdsmdg.harjot.longshadows.LongShadowsTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nokia_bold"
            android:text="NIGHTLIGHT"
            android:textAlignment="center"
            android:textColor="#f0eed8"
            android:textSize="50dp"
            app:shadow_blur_enabled="true"
            app:shadow_blur_radius="10"
            app:shadow_length="150" />
    </com.sdsmdg.harjot.longshadows.LongShadowsFrameLayoutWrapper>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nokia_light"
        android:scrollbars="vertical"
        android:ellipsize="end"
        android:singleLine="false"
        android:maxLines="11"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="  Приветствую тебя, \n\n  Если ты это читаешь, значит ты стала обладательницей моего подарка. Мною написаное приложение откроет доступ к настройке и управлению NIGHTLIGHT. \n\n  Следуй инструкциям и ничего не бойся, все просто."
        android:textColor="#f0eed8"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longShadowsFrameLayoutWrapper"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dalee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nokia_extrabold"
        android:text="Далее"
        android:textColor="#f0eed8"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.665" />
    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nokia_ultralight"
        android:text="№001, лето 2019"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>