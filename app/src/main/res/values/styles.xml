<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="colorAccent">#FFF</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="android:navigationBarColor">#000</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:strokeColor">#000</item>
        <item name="android:textColorAlertDialogListItem">#000</item>
        <item name="android:textColorHighlight">#FFF</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorAccent">#FFF</item>
        <item name="android:textViewStyle">@font/fontupa</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/background3</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialog</item>
        <item name="android:listSeparatorTextViewStyle">@style/MyListView</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:fontFamily">@font/nokia_light</item>











    </style>
    <style name="AppTheme.AppCompat" parent="Theme.AppCompat.Light">
        <item name="android:preferenceStyle">@style/Theme.AppCompat.Light</item>
        <item name="android:windowBackground">@drawable/background3</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:fontFamily">@font/nokia_light</item>


    </style>

    <style name="AppTheme.WhiteText" parent="AppTheme">

        <item name="android:textColor">@color/colorprimarymy</item>
        <item name="android:textColorSecondary">@color/colorprimarymy</item>
        <item name="android:editTextStyle">@style/MyEditText</item>






    </style>
    <style name="MyAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">#000</item>
        <item name="editTextColor">#000</item>
        <item name="android:fillColor">#000</item>
        <item name="colorAccent">#000</item>


    </style>
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:editTextColor">#000</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:colorControlActivated">#000</item>
        <item name="android:colorControlNormal">#000</item>



    </style>
    <style name="MyListView" parent="Widget.AppCompat.TextView">
        <item name="android:dividerHeight">20dp</item>
        <item name="android:listDivider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:background">#000</item>



    </style>







</resources>
